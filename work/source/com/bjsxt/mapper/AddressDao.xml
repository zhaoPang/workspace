<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjsxt.mapper.AddressDao">
	<sql id="allColumn">
		id,user_id as userId,province,city,subdistrict
	</sql>
	<sql id="queryColumn">
		<if test="id!=null">
			id = #{id}
		</if>
		<if test="userId!=null">
			and user_id = #{userId}
		</if>
		<if test="province!=null">
			and province = #{province}
		</if>
		<if test="city!=null">
			and city = #{city}
		</if>
		<if test="subdistrict!=null">
			and subdistrict = #{subdistrict}
		</if>
	</sql>
	<sql id="setColumn">
		<if test="id!=null">
			id = #{id},
		</if>
		<if test="userId!=null">
			user_id = #{userId},
		</if>
		<if test="province!=null">
			province = #{province},
		</if>
		<if test="city!=null">
			city = #{city},
		</if>
		<if test="subdistrict!=null">
			subdistrict = #{subdistrict}
		</if>
	</sql>
	
	<select id="listUserAddresses" resultType="Address">
		select <include refid="allColumn"/>
		from tb_address
		where <include refid="queryColumn"/>
	</select>

</mapper>